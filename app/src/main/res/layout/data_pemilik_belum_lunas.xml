<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/radius_18_doang"
    android:layout_width="310dp"
    android:layout_height="177dp">

    <TextView
        android:id="@+id/text_nama_belum_lunas"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/hitam"
        android:textSize="14sp"
        android:text="Made Reihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_alamat_belum_lunas"
        android:layout_below="@id/text_nama_belum_lunas"
        android:layout_marginLeft="19dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/hitam"
        android:textSize="14sp"
        android:text="Kampung dadap no5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_status_lunas_belum_lunas"
        android:layout_marginTop="17dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/merah"
        android:textSize="14sp"
        android:text="BELUM LUNAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_jumlah_bayar_belum_lunas"
        android:layout_below="@id/text_alamat_belum_lunas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/hitam"
        android:textSize="16sp"
        android:text="Rp. 100.000 / 200.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_detail_transaksi_belum_lunas"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:textColor="@color/hitam"
        android:text="Detail Transaksi"
        android:backgroundTint="@color/hijau"
        android:background="@drawable/radius_10_doang"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="145dp"
        android:layout_height="40dp"/>

</RelativeLayout>