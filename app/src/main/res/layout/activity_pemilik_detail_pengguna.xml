<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuabumuda"
    tools:context=".pemilik.PemilikDetailPengguna">

    <include
        android:id="@+id/my_toolbar_detail_pengguna_pemilik"
        layout="@layout/mytoolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_detail_pengguna_pemilik"
        android:layout_below="@id/my_toolbar_detail_pengguna_pemilik"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="18dp"

        android:layout_width="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="200dp"


            android:src="@drawable/kucing_topi" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/relative_detail_pengguna_pemilik"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="18dp"
        android:layout_below="@id/image_detail_pengguna_pemilik"
        android:layout_width="match_parent"
        android:background="@color/abuabutua"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/hitam"
            android:fontFamily="@font/poppins"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:text="Nama Pengontrak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_nama_pengontrak_detail_pengguna"
            android:layout_alignParentRight="true"
            android:textColor="@color/hitam"
            android:fontFamily="@font/poppins"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:text="Dwi Rianto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_umur_detail_pengguna_pemilik"
            android:layout_below="@id/text_nama_pengontrak_detail_pengguna"
            android:layout_alignParentRight="true"
            android:textColor="@color/hitam"
            android:fontFamily="@font/poppins"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_nama_pengontrak_detail_pengguna"
            android:fontFamily="@font/poppins"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:text="Umur"
            android:textColor="@color/hitam" />


        <TextView

            android:layout_below="@id/text_umur_detail_pengguna_pemilik"
            android:textColor="@color/hitam"
            android:fontFamily="@font/poppins"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:text="Alamat KTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_alamat_sesuai_ktp_detail_pengguna_pemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_umur_detail_pengguna_pemilik"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins"
            android:paddingTop="13dp"
            android:paddingRight="13dp"
            android:text="BSD"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/tv_alamat_kontrakan_sekarang_detail_pengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_alamat_sesuai_ktp_detail_pengguna_pemilik"
            android:fontFamily="@font/poppins"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:text="alamat /\n nomor kontrakan"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/textalamat_kontrakan_sekarang_detail_pengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_alamat_sesuai_ktp_detail_pengguna_pemilik"
            android:fontFamily="@font/poppins"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:text="kampung ddp"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/tv_bayaran_perbulan_detail_pengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alamat_kontrakan_sekarang_detail_pengguna"
            android:fontFamily="@font/poppins"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:text="Bayaran Perbulan"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/text_bayaran_perbulan_detail_pengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alamat_kontrakan_sekarang_detail_pengguna"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:text="Rp. 100.000"
            android:textColor="@color/hitam" />

        <TextView
            android:id="@+id/text_tanggal_bergabung_detail_pengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bayaran_perbulan_detail_pengguna"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins"
            android:paddingTop="13dp"
            android:paddingRight="13dp"
            android:text="22-09-10"
            android:textColor="@color/hitam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bayaran_perbulan_detail_pengguna"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:text="Tanggal bergabung"
            android:textColor="@color/hitam" />

    </RelativeLayout>

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/btn_detail_pengguna_pemilik"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relative_detail_pengguna_pemilik"
        android:textColor="@color/abuabumuda"
        android:textAllCaps="false"
        android:text="Hapus Pengguna"
        android:backgroundTint="@color/merah"
        android:background="@drawable/radius_btn_login"
        android:layout_width="165dp"
        android:layout_height="39dp"/>

</RelativeLayout>